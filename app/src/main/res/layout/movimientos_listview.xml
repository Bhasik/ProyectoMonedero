<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/swipelist_backview"
        style="@style/ListBackContent"
        android:layout_width="match_parent"
        android:background="@color/IndianRed"
        android:orientation="vertical"
        android:tag="back">

        <ImageButton
            android:id="@+id/boton_borrar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"
            android:background="@color/transparente"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_papelera" />

    </LinearLayout>

    <TableLayout
        android:id="@+id/swipelist_frontview"
        style="@style/ListFrontContent"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:gravity="center"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:shrinkColumns="*"
        android:stretchColumns="*">

        <TableRow>

            <TextView
                android:id="@+id/concepto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_span="15"
                android:text="@string/conceptoListview"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/importe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_span="10"
                android:text="@string/importeListiView"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/fecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_span="9"
                android:text="@string/fechaListView"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/hora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_span="0"
                android:text="@string/horaListView"
                android:textSize="12sp" />

        </TableRow>

    </TableLayout>

</FrameLayout>